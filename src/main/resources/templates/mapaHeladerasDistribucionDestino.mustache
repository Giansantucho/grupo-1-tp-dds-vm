            display: flex;
            gap: 20px; /* Espaciado entre el mapa y la lista de heladeras */
        }

        .map-container, .list-container {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .map-container {
            margin-bottom: 20px; /* Espaciado adicional entre el mapa y el footer */
        }

        #map {
            width: 100%;
            height: 100%;
            border-radius: 10px;
        }

        .list-group-item {
            cursor: pointer;
            border-radius: 10px;
            padding: 10px;
            background-color: #ebece3;
            transition: background-color 0.3s;
            margin-bottom: 7px;
        }

        .list-group-item:hover {
            background-color: #e2e6ea;
        }

        footer {
            display: flex;
            justify-content: space-between;
            background-color: #e0e0e0;
            padding: 20px 50px;
            margin-top: 20px; /* Espaciado adicional antes del footer */
        }

        footer div {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-right: 30px;
        }

        footer div a {
            margin-top: 10px;
            text-decoration: none;
            color: black;
        }

        .btn-inicio {
            background-color: #313937;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 10px;
            margin-left: 20px;
        }
    </style>
</head>
