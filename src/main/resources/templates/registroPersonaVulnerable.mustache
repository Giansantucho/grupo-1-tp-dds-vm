    <main>
        <!-- Título fuera del contenedor del formulario -->
        <h2 class="form-title">Registrar Persona Vulnerable</h2>

        <!-- Contenedor del formulario -->
        <div class="form-container">
            <form action="/registroPersonaVulnerable" method="POST">
                <div class="form-group">
                    <label for="nombre">Nombre de Persona Vulnerable</label>
                    <input type="text" id="nombre" name="nombre" required>
                </div>

                <div class="form-group">
                    <label for="fecha">Fecha de nacimiento</label>
                    <input type="date" id="fecha" name="fecha" required>
                </div>

                <div class="form-group">
                    <label for="documento">¿Posee documento?</label>
                    <select id="documento" name="documento">
                        <option value="si">Sí</option>
                        <option value="no">No</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="numero-documento">Número de documento</label>
                    <input type="number" maxlength="8" id="numero-documento" name="numero-documento">
                </div>

                <div class="form-group">
                    <label for="domicilio">¿Posee domicilio?</label>
                    <select id="domicilio" name="domicilio">
                        <option value="si">Sí</option>
                        <option value="no">No</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="direccion">Domicilio</label>
                    <input type="text" id="direccion" name="direccion">
                </div>

                <div class="form-group full-width">
                    <label for="tarjeta">Número de tarjeta asociada</label>
                    <input type="number" maxlength="16" id="tarjeta" name="tarjeta">
                </div>

                <div class="form-group">
                    <label for="menores">¿Posee menores a cargo?</label>
                    <select id="menores" name="menores">
                        <option value="si">Sí</option>
                        <option value="no">No</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="cantidad-menores">Cantidad de menores a cargo</label>
                    <select id="cantidad-menores" name="cantidad-menores">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                    </select>
                </div>

                <div class="buttons">
                    <a href="/elegirDonacion" class="btn cancel-button">Cancelar</a>
                    <a href="/registroPersonaVulnerableFinal">
                            <button type="submit" class="register-button">Registrar</button>
                    </a>
                    </div>
            </form>
